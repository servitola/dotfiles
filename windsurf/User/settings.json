{
    // Editor appearance
    "editor.fontFamily": "MesloLGS",
    "editor.fontSize": 15,
    "editor.lineHeight": 1.5,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        100,
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.snippetSuggestions": "top",
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.parameterHints.enabled": true,
    "editor.inlineSuggest.enabled": true,
    "editor.stickyScroll.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.mouseWheelZoom": true,
    "editor.smoothScrolling": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    // Workbench settings
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.enablePreview": false,
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.focusRecentEditorAfterClose": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.list.automaticKeyboardNavigation": true,
    "workbench.startupEditor": "none",
    "workbench.fontSize": 15,
    "workbench.sideBar.fontSize": 25,
    "workbench.explorer.fontSize": 25,
    // Explorer settings
    "list.fontSize": 15,
    "workbench.tree.fontSize": 15,
    "tree.fontSize": 15,
    "window.sideBar.fontSize": 15,
    "sideBar.fontSize": 15,
    "explorer.fontSize": 15,
    // Terminal settings
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shellArgs.osx": [
        "-l"
    ],
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.watcherExclude": {
        "**/.cache/": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        "**/.idea/**": true,
        "**/.nuget/": true,
        "**/[Bb]in/": true,
        "**/[Dd]ebug/": true,
        "**/[Oo]bj/": true,
        "**/[Rr]elease/": true,
        "**/[Tt]emp/": true,
        "**/*.log": true,
        "**/cache/": true,
        "**/DerivedData/": true,
        "**/env/**": true,
        "**/node_modules/**": true,
        "**/venv/**": true,
        "**/x64/": true,
        "**/x86/": true
    },
    "files.exclude": {
        "_ReSharper.Caches": true,
        ".appium": true,
        ".cache": true,
        ".gitconfig": true,
        ".hammerspoon": true,
        ".IdentityService": true,
        ".lemminx": true,
        ".lldb": true,
        ".matplotlib": true,
        ".nano": true,
        ".nanorc": true,
        ".npm": true,
        ".npmrc": true,
        ".nuget": true,
        ".oh-my-zsh": true,
        ".ServiceHub": true,
        ".sh_history": true,
        ".skiko": true,
        ".swiftpm": true,
        ".Trash": true,
        ".wget-hsts": true,
        ".yandex": true,
        ".z": true,
        ".zcompdump*": true,
        ".zprofile": true,
        ".zsh_sessions": true,
        ".zshrc": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/*.pdb": true,
        "**/*.suo": true,
        "**/bin": true,
        "**/CVS": true,
        "**/node_modules": true,
        "**/obj": true,
        "**/Pods/": true,
        "**/Thumbs.db": true,
        "Applications": true,
        "LINQPad": true,
        "Movies": true,
        "Public": true
    },
    // Search settings
    "search.exclude": {
        "**/.git": true,
        "**/bin": true,
        "**/bower_components": true,
        "**/com.apple.biome.BiomeStreams.BiomeLighthousePlugin/**": true,
        "**/env": true,
        "**/Library/Caches/": true,
        "**/node_modules": true,
        "**/obj": true,
        "**/venv": true,
        "**/.git": true,
    },
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    // Testing settings
    "testing.automaticallyOpenPeekView": "never",
    "testing.followRunningTest": true,
    "testing.gutterEnabled": true,
    "testing.openTesting": "neverOpen",
    // Debug settings
    "debug.toolBarLocation": "docked",
    "debug.inlineValues": true,
    "debug.console.fontSize": 25,
    "debug.console.fontFamily": "JetBrains Mono",
    // Other settings
    "breadcrumbs.enabled": true,
    "telemetry.telemetryLevel": "off",
    "update.mode": "none",
    "security.workspace.trust.enabled": false,
    // Git Graph settings for visualization
    "git-graph.repository.commits.showSignatureStatus": true,
    "git-graph.repository.commits.showSignatureStatusTooltip": true,
    "git-graph.repository.onLoad.showCheckedOutBranch": true,
    "git-graph.repository.onLoad.scrollToHead": true,
    "git-graph.repository.statusBar.enabled": true,
    "git-graph.repository.commits.mute.commitsThatAreNotAncestorsOfHead": true,
    // General Git settings
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "git.showInlineOpenFileAction": true,
    "git.decorations.enabled": true,
    "git.showActionButton": {
        "commit": true,
        "publish": true,
        "sync": true
    },
    // Editor settings for Git decorations
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        120
    ],
    "editor.renderLineHighlight": "all",
    "editor.occurrencesHighlight": "singleFile",
    "editor.showFoldingControls": "always",
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "explorer.decorations.badges": true,
    "explorer.decorations.colors": true,
    // Diff settings
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "diffEditor.maxComputationTime": 0,
    "diffEditor.renderIndicators": true,
    "windsurf.cascadeCommandsAllowList": [
        "git",
        "dotnet",
        "brew",
        "ollama",
        "ps",
        "colima",
        "docker",
        "python3",
        "source",
        "python",
        "cd",
        "pip",
        "pip3",
        "pkill",
        "ps",
        "top",
        "df",
        "cp",
        "cat",
        "grep",
        "curl",
        "docker-compose",
        "sleep",
        "appium",
        "pwd",
        "gradlew",
        "open",
        "emulator",
        "which",
        "adb",
        "ffmpeg",
        "cp",
        "chmod",
        "killall",
        "unzip",
        "mkdir",
        "mv",
        "rmdir",
        "xcodebuild",
        "source"
    ],
    "windsurf.chatFontSize": "large",
    "windsurf.autoOpenEditedFiles": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "top",
    "extensions.ignoreRecommendations": true,
    "vsicons.presets.hideExplorerArrows": true,
    "window.zoomLevel": 2,
    "workbench.editorAssociations": {
        "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
    },
    "vscode-office.editorTheme": "Github Dark",
    "git.openRepositoryInParentFolders": "always",
    "windsurf.marketplaceExtensionGalleryServiceURL": "https://marketplace.visualstudio.com/_apis/public/gallery",
    "windsurf.marketplaceGalleryItemURL": "https://marketplace.visualstudio.com/items",
    "maui.configuration.androidSdkPreferredPath": "/Users/servitola/Library/Android/sdk",
    "maui.configuration.javaSdkPreferredPath": "/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home",
    "csharp.semanticHighlighting.enabled": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,
    "dotnet.codeLens.enableReferencesCodeLens": true,
    "dotnet.formatting.organizeImportsOnFormat": true,
    "gitlens.ai.model": "openai:gpt-4o",
    "csharp.semanticHighlighting.enabled": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,
    // Roslynator settings
    "roslynator.analyzerSearchPaths": [
        "${workspaceFolder}/packages"
    ],
    "roslynator.codeAnalysis.enabled": true,
    "roslynator.codeActionsEnabled": true,
    "roslynator.diagnosticsEnabled": true,
    // Auto-Using settings
    "autoUsing.imports.useAmbientModules": true,
    "autoUsing.imports.sortOnSave": true,
    // Test Explorer settings
    "dotnet-test-explorer.testProjectPath": "**/*UITests.csproj",
    "dotnet-test-explorer.autoWatch": true,
    // Thunder Client settings
    "thunder-client.saveToWorkspace": true,
    "thunder-client.workspaceRelativePath": "./thunder-tests",
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "files.autoSave": "afterDelay",
    "windsurf.cascadeCommandsDenyList": [
        "git push"
    ],
    "windsurf.enableModelBasedAutoExecution": true,
    "windsurf.autoExecutionPolicy": "turbo",
    "windsurf.explainAndFixInCurrentConversation": true,
    "windsurf.searchMaxWorkspaceFileCount": 0
}
